                                + "<button type='button' class='btn btn-danger saveid-btn' id='"+ valor.InformacionComercialProductoId +"'>Eliminar</button>"
                            +"</div>"
                        + "</div>";
                        $('#tabla').append(html);
                    });
                    $("#AgragarInfoproducto")[0].reset();
                    $("#agregarinfoproducto").modal('hide');
                }
            }
        });
        return false;
    });
